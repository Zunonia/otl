\newcommand{\insertImage}[3]{
	\begin{figure}
		\centering
		\includegraphics[width=.90\linewidth]{#1}
		\caption[#2]{#2}
		\label{fig:#3}
	\end{figure}
}
% Non-floating image insertion {filename}{caption}{label}{width}
\newcommand{\insertImageNF}[4]{
	\vspace{1.3em}
	\setlength{\parindent}{0em}
	\begin{minipage}{1.0\linewidth}
		\centering
		\includegraphics[width=#4]{#1}
		\captionof{figure}{#2}
		\label{fig:#3}
	\end{minipage}
	\setlength{\parindent}{1em}
}
\newcommand{\insertImageNFW}[4]{
	\vspace{1.3em}
	\setlength{\parindent}{0em}
	\begin{minipage}{1.0\linewidth}
		\centering
		\includegraphics[width=#4]{#1}
		\captionof{figure}{#2}
		\label{fig:#3}
	\end{minipage}
	\setlength{\parindent}{1em}
}
